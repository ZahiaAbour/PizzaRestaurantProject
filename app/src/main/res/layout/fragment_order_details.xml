<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/order_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_size_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/order_image_view"
        android:layout_width="250sp"
        android:layout_height="350sp"
        android:layout_gravity="center"
        android:layout_weight="0.3" />


</LinearLayout>
