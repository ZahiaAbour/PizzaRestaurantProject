<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corners"

    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pizza" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:text="Pizza Name"
            android:textSize="25sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/pizza_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="old price"
            android:textSize="20sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new price"
            android:textSize="20sp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/offer_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new price"
            android:textSize="20sp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/offer_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quantity"
            android:textSize="20sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/offer_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="size"
            android:textSize="20sp"
            android:visibility="gone"
            />




        <TextView
            android:id="@+id/offer_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offer start"
            android:textSize="20sp"
            android:visibility="gone"
             />




        <TextView
            android:id="@+id/offer_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offer_finish"
            android:textSize="20sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user info"
            android:textSize="20sp"
            android:visibility="gone"
            />




        <Button
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#d63e12"
            android:text="Order" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/heart_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_heart_filled" />
</LinearLayout>
